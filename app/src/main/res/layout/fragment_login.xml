<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LoginFragment">

    <ImageView
        android:id="@+id/loginicon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:contentDescription="@string/health_recipe"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvHealthRecipe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvHealthRecipe" />

    <TextView
        android:id="@+id/tvHealthRecipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Health Recipe"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/loginicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginicon"
        app:layout_constraintBottom_toBottomOf="@+id/loginicon" />


</androidx.constraintlayout.widget.ConstraintLayout>
